doctype html
html(lang='es')
  include includes/head.pug
  link(rel="stylesheet", href="css/shuffle.css")
  body
    include includes/header.pug

    include includes/float-form.pug

    .content-page
      include includes/projects.pug
      .container
        #portfolio.d-none.d-md-block
          .row
            .col-12.col-md-3
              aside#main-sidebar
                .sidebar-content
                  .widget-filter
                    .js-categories
                      button.btn.btn-block.btn-white(data-value='architecture')
                        span ARQUITECTURA
                      button.btn.btn-block.btn-white(data-value='construction')
                        span CONSTRUCCIÓN
                  .widget-filter
                    h2.title-widget PROYECTO
                    select#js-names.form-control
                      option(value='ALL') A - Z
                      option(value='A') A
                      option(value='B') B
                      option(value='C') C
                      option(value='D') D
                      option(value='E') E
                      option(value='F') F
                      option(value='G') G
                      option(value='H') H
                      option(value='I') i
                      option(value='J') J
                      option(value='K') K
                      option(value='L') L
                      option(value='M') M
                      option(value='N') N
                      option(value='O') O
                      option(value='P') P
                      option(value='Q') Q
                      option(value='R') R
                      option(value='S') S
                      option(value='T') T
                      option(value='U') U
                      option(value='V') V
                      option(value='W') W
                      option(value='X') X
                      option(value='Y') Y
                      option(value='Z') Z
                  .widget-filter
                    h2.title-widget SERVICIO
                    .js-service
                      ul.list-bullet
                        li(data-value='conceptualizacion')
                          span OFICINAS
                        li(data-value='distribucion')
                          span RETAIL
                        li(data-value='project')
                          span PROYECTO
                        li(data-value='design')
                          span DISEÑO
                        li(data-value='development')
                          span DESARROLLO
                        li(data-value='ejecution')
                          span EJECUCIÓN
                  .widget-filter
                    h2.title-widget ÁREA
                    .js-areas
                      ul.list-bullet
                        li(data-value='low')
                          span 100 - 500
                        li(data-value='high')
                          span 500 - 1000

            .col-12.col-md-9
              .shape-portfolio
                .row.no-gutters.shape-shuffle-container.js-shuffle

                  mixin project(val, index)
                    .single-project.col-6.col-md-4.col-lg-2(data-category=val.groups, data-name=val.name, data-client=val.client, data-service=val.services, data-date-created='2017-04-30', data-area=val.area)
                      .aspect(data-target=".modal-portfolio", data-toggle="modal")
                        .media-container
                          .media-content
                            .media(style='background-image: url("http://www.studiogusto.com/en/wp-content/uploads/sites/2/2013/10/peter.jpg")')
                            .media-detail
                              span LA CUADRA DE SALVADOR
                      .single-title=val.client

                  each val, index in projects
                    +project(val, index)

                  .the-sizer(class='col-1')
      #portfolio-2.d-md-none
        .grid-projects
          #grid-portfolio.row.no-gutters.my-shuffle-container

            mixin project(val, index)
              .box-portfolio.col-12.col-md-1.picture-item(data-groups='["' + val.groups + '"]', data-date-created='2017-04-30', data-client=val.client, data-status=val.status, data-area=val.area, data-services=val.services)
                .box-content(data-target=".modal-portfolio", data-toggle="modal")
                  .box-images
                    .box-img.bottom(style="background-image: url('" + val.thumbnail + "')")
                    .box-img.top
                      img(src=val.logo)
                  .box-description
                    .box-client=val.client
                    .box-project projecto

            each val, index in projects
              +project(val, index)

            .my-sizer-element.col-1

        .actions-projects
          .filter-projects
            .filter-options.clearfix
              a(href="javascript:void(0)", data-group='architecture') ARQUITECTURA
              a(href="javascript:void(0)", data-group='construction') CONSTRUCCIÓN
              a.d-none.d-md-inline-block(href="javascript:void(0)", data-group='all') MOSTRAR TODOS
          .sort-projects
            .sort-options
              .sort-option
                label
                  input(type='radio', name='sort-value', value='date-created')
                  | CRONOLÓGICO
              .sort-option
                label
                  input(type='radio', name='sort-value', value='client')
                  | CLIENTE
              .sort-option
                label
                  input(type='radio', name='sort-value', value='services')
                  | SERVICIO
              .sort-option
                label
                  input(type='radio', name='sort-value', value='area')
                  | ÁREA

    .modal.fade.modal-portfolio(tabindex='-1', role='dialog', aria-hidden='true')
      .modal-dialog.modal-lg.modal-xl
        .modal-content
          .modal-body
            button.close(type="button", data-dismiss="modal", aria-label="Close")
              span(aria-hidden="true") &times;
            .wrap-portfolio
              .portfolio-slider.swiper-container
                .swiper-wrapper
                  .swiper-slide
                    figure.portfolio-banner-bg(style="background-image: url(./images/portfolio/slide1.jpg)")
                      img(src="./images/portfolio/slide1.jpg").d-md-none
                  .swiper-slide
                    figure.portfolio-banner-bg(style="background-image: url(./images/portfolio/slide1.jpg)")
                      img(src="./images/portfolio/slide1.jpg").d-md-none
                  .swiper-slide
                    figure.portfolio-banner-bg(style="background-image: url(./images/portfolio/slide1.jpg)")
                      img(src="./images/portfolio/slide1.jpg").d-md-none
                  .swiper-slide
                    figure.portfolio-banner-bg(style="background-image: url(./images/portfolio/slide1.jpg)")
                      img(src="./images/portfolio/slide1.jpg").d-md-none
                .swiper-pagination

              .project-top
                .project-logo
                  img(src="./images/portfolio/project-logo.png")
                .project-summary
                  .project-title PASQUALE
                  .project-review Lorem ipsum sit

              .portfolio-description
                .project-container
                  .project-content
                    .project-wrap
                      .project-boxes
                        .project-box
                          h4 SERVICIO
                            .project-box-desc Diseño, Desarrollo y ejecución
                        .project-box
                          h4 ÁREA
                            .project-box-desc 800 M<sup>2</sup>

                      ul.project-services.clearfix
                        li.project-service.active
                          img.d-none.d-md-block(src="./images/portfolio/services/conceptualizacion.png", alt="")
                          .project-service-text Conceptualización
                        li.project-service.active
                          img.d-none.d-md-block(src="./images/portfolio/services/conceptualizacion.png", alt="")
                          .project-service-text Distribución Espacial
                        li.project-service.active
                          img.d-none.d-md-block(src="./images/portfolio/services/conceptualizacion.png", alt="")
                          .project-service-text Ingenierias de detalle
                        li.project-service
                          img.d-none.d-md-block(src="./images/portfolio/services/conceptualizacion.png", alt="")
                          .project-service-text Planimetría arquitectónica
                        li.project-service
                          img.d-none.d-md-block(src="./images/portfolio/services/conceptualizacion.png", alt="")
                          .project-service-text Selección de Acabados
                        li.project-service
                          img.d-none.d-md-block(src="./images/portfolio/services/conceptualizacion.png", alt="")
                          .project-service-text Planificación
                        li.project-service
                          img.d-none.d-md-block(src="./images/portfolio/services/conceptualizacion.png", alt="")
                          .project-service-text Construcción
                        li.project-service
                          img.d-none.d-md-block(src="./images/portfolio/services/conceptualizacion.png", alt="")
                          .project-service-text Control de Calidad
                        li.project-service
                          img.d-none.d-md-block(src="./images/portfolio/services/conceptualizacion.png", alt="")
                          .project-service-text Cierre
                  .project-toggle.d-none.d-md-block
                    a.summary-toggle(href="#")

    include includes/footer.pug

    script(src="bower_components/shufflejs/dist/shuffle.min.js")
    script(src="js/proyectos.js",type="text/javascript")
    script(src="js/proyectos_2.js",type="text/javascript")
