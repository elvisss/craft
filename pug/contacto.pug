doctype html
html(lang='es')
  include includes/head.pug
  body
    include includes/header.pug

    include includes/float-form.pug

    section.fluid-full-section
      .main-wrapper.main-sm-wrapper
        #googlemaps
        #box-contact
          .body-contact
            h4 CONTÁCTANOS
            .box-contact-wrap
              .row.no-gutters.justify-content-between.align-items-center.single-contact.contact-address
                .col-2
                  img(src="./images/contact-address.svg")
                .col-10.contact-body
                  p Av. Cotralmirante Montero<br /> N° 435 Of. 6D - Magdalena del Mar
              .row.no-gutters.justify-content-between.align-items-center.single-contact.contact-phone
                .col-2
                  img(src="./images/contact-phone.svg")
                .col-10.contact-body
                  p (51) 01-7156702
              .row.no-gutters.justify-content-between.align-items-center.single-contact.contact-email
                .col-2
                  img(src="./images/contact-email.svg")
                .col-10.contact-body
                  a(href="mailto:jgalindo@craft.com.pe") proyectos@craft.com.pe
              .row.no-gutters.justify-content-between.align-items-center.single-contact.contact-web
                .col-2
                  img(src="./images/contact-web.svg")
                .col-10.contact-body
                  p
                    a(href="http://www.craft.com.pe") craft.com.pe

              .buttons-contact
                a.btn.btn-block.btn-transparent(href="#") CALIFÍCANOS EN FACEBOOK
                a.btn.btn-block.btn-transparent(href="#", data-target=".modal-contact", data-toggle="modal") CUÉNTANOS DE TU PROYECTO
                a.btn.btn-block.btn-transparent(href="#", data-target=".work-us", data-toggle="modal") TRABAJA CON NOSOTROS

    .modal.fade.modal-contact(tabindex='-1', role='dialog', aria-hidden='true')
        .modal-dialog.modal-lg
            .modal-content.modal-body-bg-black
                .modal-header
                  button.close(type="button", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") &times;
                .modal-body
                    .contact-body-form.valid-body-form
                      form
                        h2 CUÉNTANOS DE TU PROYECTO
                        .row
                          .col-12.col-md-6
                            .form-group
                              .field-mandatory
                                label Nombre
                              input.form-control(type="text", placeholder="")
                          .col-12.col-md-6
                            .form-group
                              label
                                .field-mandatory E-mail
                              input.form-control(type="email", placeholder="")
                          .col-12.col-md-6
                            .form-group
                              label
                                .field-mandatory Tipo de Proyecto
                              select.form-control
                                option OFICINA
                                option RETAIL
                          .col-12.col-md-6
                            .form-group
                              label
                                .field-mandatory Área del proyecto (m<sup>2</sup>)
                              select.form-control
                                option MENOS DE 100
                                option DE 100 A 500
                                option DE 500 A MÁS
                          .col-12.col-md-6
                            .form-group
                              label Servicio requerido
                              select.form-control
                                option Diseño
                                option Desarrollo
                                option Ejecución
                          .col-12.col-md-6
                            .form-group
                              label Ubicación
                              input.form-control(type="text", placeholder="")
                          .col-12
                            .form-group
                              label Mensaje
                              textarea.form-control(rows="4")
                          .col-12
                            button.btn.btn-block.btn-transparent(type="submit") COTIZAR
                        .form-message *Campos obligatorios

    .modal.fade.modal.work-us(tabindex='-1', role='dialog', aria-hidden='true')
        .modal-dialog.modal-lg
            .modal-content.modal-body-bg-black
                .modal-header
                  button.close(type="button", data-dismiss="modal", aria-label="Close")
                    span(aria-hidden="true") &times;
                .modal-body
                    .contact-body-form
                      form
                        h2 TRABAJA CON NOSOTROS
                        .row
                          .col-12.col-md-6
                            .form-group
                              label Nombre
                              input.form-control(type="text", placeholder="")
                          .col-12.col-md-6
                            .form-group
                              label E-mail
                              input.form-control(type="email", placeholder="")
                          .col-12
                            .form-group
                              label Puesto a postular
                              input.form-control(type="text", placeholder="")
                          .col-12
                            .form-group
                              label Adjuntar CV <span>(WORD / PDF)</span>
                              input.form-control(type="file")
                          .col-12
                            .form-group
                              label Mensaje
                              textarea.form-control(rows="4")
                          .col-12
                            button.btn.btn-block.btn-transparent(type="submit") ENVIAR

    include includes/footer.pug
    script(src="http://maps.googleapis.com/maps/api/js?key=AIzaSyBX4D2ABvJBlhKbjCE5vOF2PAr9fjDRp7I")
    script(src="js/contacto.js",type="text/javascript")